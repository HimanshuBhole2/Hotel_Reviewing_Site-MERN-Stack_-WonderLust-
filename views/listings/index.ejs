<% layout('/layouts/boilerplate') -%>


<body >
    <br><br>
    <div id="filters">

        <div class="container-fluid py-2 hr-scroll" >
        <h2 class="font-weight-light">Filter : </h2>
        <div class="d-flex flex-row flex-nowrap overflow-auto">
                
            
                <div class="filter col-sm-4 col-md-2">
                    <a href="/listings/category?category=Trending">
                    <div><i class="fa-solid fa-fire"></i></div>
                    <p>Trending</p></a>
                </div>

                <div class="filter col-sm-4 col-md-2">
                    <a href="/listings/category?category=Farm">
                    <div><i class="fa-solid fa-wheat-awn"></i></div>
                    <p>Farms</p>
                    </a>
                </div>

                <div class="filter col-sm-4 col-md-2">
                    <a href="/listings/category?category=Rooms">
                    <div><i class="fa-solid fa-bed"></i></div>
                    <p>Rooms</p>
                    </a>
                </div>

                <div class="filter col-sm-4 col-md-2">
                    <a href="/listings/category?category=Castel">
                    <div><i class="fa-brands fa-fort-awesome"></i></div>
                    <p>Castel</p>
                    </a>
                </div>
                <div class="filter col-sm-4 col-md-2">
                    <a href="/listings/category?category=Iconic City">
                    <div><i class="fa-solid fa-mountain-city"></i></div>
                    <p>Iconic City</p>
                    </a>
                </div>

                <div class="filter col-sm-4 col-md-2">
                    <a href="/listings/category?category=Mountain View">
                    <div><i class="fa-solid fa-mountain-sun"></i></div>
                    <p>Mountain View</p>
                    </a>
                </div>

                <div class="filter col-sm-4 col-md-2">
                    <a href="/listings/category?category=Beach">
                    <div><i class="fa-solid fa-umbrella-beach"></i></div>
                    <p>Beach</p>
                    </a>
                </div>

                <div class="filter col-sm-4 col-md-2">
                    <a href="/listings/category?category=Cabins">
                    <div><i class="fa-brands fa-fort-awesome"></i></div>
                    <p>Cabins</p>
                    </a>
                </div>
                <div class="filter col-sm-4 col-md-2">
                    <a href="/listings/category?category=Camping">
                    <div><i class="fa-solid fa-campground"></i></div>
                    <p>Camping</p>
                    </a>
                </div>

                <div class="filter col-sm-4 col-md-2">
                    <a href="/listings/category?category=Golfing">
                    <div><i class="fa-solid fa-golf-ball-tee"></i></div>
                    <p>Golfing</p>
                    </a>
                </div>

                <div class="filter col-sm-4 col-md-2">
                    <a href="/listings/category?category=Island">
                    <div><i class="fa-solid fa-ship"></i></div>
                    <p>Islands</p>
                    </a>
                </div>

            </div>
        </div>
        
        <div class="tax-toggle" >
        <div class="form-check-reverse-inline form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label-inline ms-3" for="flexSwitchCheckDefault">Default switch checkbox input</label>
          </div>
          
        </div>
    </div>

    

    <h3 class="mt-3 ms-3">All Titles</h3>
    <div class="row index-row " style="width: 100%; align-items: center; justify-content: center;">
    <%for (let listing of allListning){ %>
    
        <div class="card listing-card designing-card col-md-3 col-sm-1" style="width: 20rem; ">
            <a href="/listings/<%= listing._id %>">
            <img src="<%=listing.image.url%>" class="card-img-top" alt=".." style="height: 20rem; ">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text"><b><%=listing.title%></b><br>
                &#8377; <%=listing.price.toLocaleString('en-in')%> 
                <i class="tax-info">&nbsp; &nbsp; + 18% GST</i>
            </p>
                
            </div>
        </a>
        </div>
    
    <%}%>
    </div>


<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
        let taxInfo = document.getElementsByClassName("tax-info");
       for(info of taxInfo){
        if( info.style.display == "inline"){
            info.style.display = "none";
        }else{
        info.style.display = "inline";
        }
       }
    })
    
</script>
</body>
